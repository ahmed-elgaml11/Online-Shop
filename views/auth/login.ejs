<%- include('../parts/header') %>
<%- include('../parts/navbar') %>

<!-- Alert Messages -->
<br> 
<!-- Success Alert --> <div class="container mt-4">

<% if (success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (error && error.length > 0) { %>
    <div class="col-md-6 mx-auto">
        <% error.forEach(function(err) { %>
            <div class="alert alert-danger alert-dismissible fade show text-center shadow-sm" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= err.msg || err %>
                <br>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }); %>
    </div>
<% } %>
</div>
<div class="main-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card p-4 p-md-5">
                    <div class="bg-dark text-white p-3 rounded-top" data-bs-theme="dark">
                        <h3 class="text-center  mb-0">Login</h3>
                    </div>
                    <form method="POST" action="/user/login" class="p-4">
                        <div class="mb-4">
                            <label class="form-label fw-medium">Email</label>
                            <input type="email" 
                                   class="form-control form-control-lg" 
                                   name="email" 
                                   value="<%= data.email %>"
                                   placeholder="Enter your email" 
                                    required>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-medium">Password</label>
                            <input type="password" 
                                   class="form-control form-control-lg" 
                                   name="password" 
                                   value="<%= data.password %>"
                                   autocomplete="new-password"
                                   placeholder="Enter your password" 
                                   required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">Login</button>
                        <div class="text-center mt-3">
                            <small>Don't have an account? <a href="/user/signup" class="text-decoration-none">Sign up</a></small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    setTimeout(() => {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.add('fade-out');
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>

