<h2 class="page-title text-center my-4">üìÑManage Products</h2>
<div class="text-center mb-4">
    <a class="btn btn-success btn-lg" href="/admin/product/add-product">
        <i class="fas fa-plus-circle"></i> Add New Product
    </a>
</div>


<div class="table-responsive">
    <table class="table table-hover table-bordered shadow-sm custom-silver-table">
        <thead class="table-dark">
            <tr>
                <th>üìå Product</th>
                    <th>üí≤ Price</th>
                    <th>üìÇ Category</th>
                    <th>üñºÔ∏è Product Image</th>
                    <th>‚úèÔ∏è Edit</th>
                    <th>üóëÔ∏è Delete </th>
            </tr>
    
        </thead>
        <tbody>
            <% if (products.length > 0) { %>
                <% products.forEach(function(product) { %>
                    <tr>
                        <td>
                            <strong><%= product.title %></strong>
                        </td>
                        <td>
                            $<%= parseFloat(product.price).toFixed(2) %>
                        </td>
                        <td>
                                <%= product.category %>
                        </td>
                        <td>
                           <% if(product.image == ""){ %>
                            <img src="/imgs/noimage.png" width="80" height="80""">

                            <% }else{ %>
                                <img src="/uploads/products/<%= product._id %>/<%= product.image %>" width="85" height="100 alt="">
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/product/edit-product/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
                        </td>

                        <td>
                            <form method="post" action="/admin/product/delete-product/<%= product._id %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this category?')">
                                <i class="fas fa-trash"></i>    Delete
                            </button>
                            </form>
                        </td>
        

                    </tr>

                <% }) %>
            <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center text-muted">No Products found üòû</td>
                    </tr>
                <% } %>
    
        </tbody>
    </table>
    
</div>







<script>
    setTimeout(() => {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.add('fade-out');
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>



