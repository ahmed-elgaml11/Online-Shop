<%- include('../parts/Admin_header') %>
<%- include('../parts/Admin_navbar') %>

<div class="container mt-4">
    <!-- Flash Messages -->
    <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (error && error.length > 0) { %>
        <div class="col-md-6 mx-auto">
            <% error.forEach(function(err) { %>
                <div class="alert alert-danger alert-dismissible fade show text-center shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle"></i> <%= err.msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% }); %>
        </div>
¬†¬†¬†¬†<%¬†}¬†%>

    <!-- Page Title -->
    <h2 class="page-title text-center my-4">üìÑ Manage Pages</h2>

    <!-- Add Page Button -->
    <div class="text-center mb-4">
        <a class="btn btn-success btn-lg" href="/admin/add-page">
            <i class="fas fa-plus-circle"></i> Add New Page
        </a>
    </div>
    

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm custom-silver-table">
            <thead class="table-dark">
                <tr>
                    <th>üìå Title</th>
                    <th>‚úèÔ∏è Edit</th>
                    <th>üóëÔ∏è Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (pages.length > 0) { %>
                    <% pages.forEach(page => { %>
                        <tr>
                            <td>
                                <a href="/admin/details/<%= page.slug %>" class="text-decoration-none fw-bold text-primary">
                                    <strong><%= page.title %></strong>
                                </a>
                                                            </td>

                            <td>
                                <a href="/admin/edit-page/<%= page.slug %>" class="btn btn-warning btn-sm">
                                         Edit
                                </a>
                            </td>
                            <% if(page.title == 'Home') {%>
                                <td></td>
                            <% } else { %>
                            <td>
                                <form action="/admin/delete/<%= page.slug %>" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this page?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                            <% } %>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center text-muted">No pages found üòû</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Flash Message Auto-Close -->
<script>
    setTimeout(() => {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.add('fade-out');
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>

