<%- include('../parts/Admin_header') %>
<%- include('../parts/Admin_navbar') %>

<div class="container mt-4">
    <!-- Flash Messages -->
    <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>


    <!-- Page Title -->
    <h2 class="page-title text-center my-4">ğŸ“„ Manage Pages</h2>

    <!-- Add Page Button -->
    <div class="text-center mb-4">
        <a class="btn btn-success btn-lg" href="/admin/add-page">
            <i class="fas fa-plus-circle"></i> Add New Page
        </a>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm custom-silver-table">
            <thead class="table-dark">
                <tr>
                    <th>ğŸ“Œ Title</th>
                    <th>âœï¸ Edit</th>
                    <th>ğŸ—‘ï¸ Delete</th>
                </tr>
            </thead>
            <tbody>
                <% if (pages.length > 0) { %>
                    <% pages.forEach(page => { %>
                        <tr>
                            <td><strong><%= page.title %></strong></td>
                            <td>
                                <a href="/admin/edit/<%= page._id %>" class="btn btn-warning btn-sm">
                                         Edit
                                </a>
                            </td>
                            <% if(page.title == 'Home') {%>
                                <td></td>
                            <% } else { %>
                            <td>
                                <form action="/admin/delete/<%= page._id %>" method="POST"
                                    onsubmit="return confirm('Are you sure you want to delete this page?');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                            <% } %>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center text-muted">No pages found ğŸ˜</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Flash Message Auto-Close -->
<script>
    setTimeout(() => {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.add('fade-out');
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>

<%- include('../parts/Admin_footer') %>
